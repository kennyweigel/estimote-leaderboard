<div class="row">
  <div class="col-md-12">
    <form action="/player/edit/<%= player.id %>" method="POST">
      <div class="form-group">
        <label>Display Name</label>
        <input class="form-control" value="<%= player.displayName %>" name="displayName" type="text"/>
      </div>
      <div class="form-group">
        <label>Estimote Minor</label>
        <input class="form-control" value="<%= player.estimoteMinor %>" name="estimoteMinor" type="text"/>
      </div>
      <div class="form-group">
        <label>Score</label>
        <input class="form-control" value="<%= player.score %>" name="score" type="number"/>
      </div>

      <br/>
      <input class="btn btn-primary" type="submit"/>
      <a class="btn btn-primary" href="/player/admin">Back</a>
    </form>
  </div>
</div>
